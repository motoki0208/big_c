= render 'shared/header'
= render 'shared/head_jumbotron'
%br/
%br/
#like__detail-container
  .galleryHeader
    .galleryHeader__title
      = current_user.name
      GALLERY
  .c-tabNav
    %ul.c-tabNav__list
      %li.c-tabNav__item
        お気に入り
  %h2
    = current_user.name
    さんのお気に入りの未来像
  .album.py-5.bg-light.motoki-kobayashi
    .container
      .row
        - @addictions.each do |addiction|
          - if addiction.likes_count == 1
            .addiction-card.col-md-4.col-6.pr-1.pl-1.pb-4
              = link_to(addiction_path(addiction.id), class: 'profile__card') do
                .card-main-image.card.mb-4.box-shadow
                  = image_tag(addiction.image,class: "card-img-top")
                  .card-body.p-3
                    .card-left.col-lg-3.col-sm-12.p-0
                      .rounded-circle.image-icon
                        = image_tag(addiction.star.avatar,class: "")
                    .card-right.col-lg-9.col-sm-12.p-0
                      .card-text.pl-2
                        %h4= addiction.title
                        .card__summary
                          %p{style:"-webkit-box-orient: vertical;"}= addiction.summary
