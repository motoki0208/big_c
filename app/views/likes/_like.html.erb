<div class="like-link" id="like-link-<%= star.id %>">
  <% if current_user.likes.find_by(star_id: star.id) %>
    <%= link_to unlike_path(star.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️<%= star.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(star.id), method: :post, remote: true do %>
        <div class = "iine__button">♡️<%= star.likes.count %></div>
    <% end %>
  <% end %>
</div>
