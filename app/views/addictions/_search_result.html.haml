.album.py-5.bg-light
  .container
    .row
      - @stars.each do |star|
        -if star.addiction
          .addiction-card.col-md-4.col-6.pr-1.pl-1.pb-4
            = link_to addiction_path(star.addiction) do
              .card-main-image.card.mb-4.box-shadow
                = image_tag(star.addiction.image)
                .card-body.p-3
                  .card-left.col-lg-3.col-sm-12.p-0
                    .rounded-circle.image-icon
                      = image_tag(star.avatar)
                  .card-right.col-lg-9.col-sm-12.p-0
                    .card-text.pl-2
                      %h4
                        =star.addiction.title
                      %p
                        =star.addiction.summary
