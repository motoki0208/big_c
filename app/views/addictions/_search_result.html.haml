.album.py-5.bg-light
  .container
    .row
      - @stars.each do |star|
        -if star.addiction
          .item.addiction-card.px-1.py-2
            = link_to addiction_path(star.addiction) do
              .card-main-image.card.mb-4.box-shadow
                = image_tag(star.addiction.image, class:"card-image-top")
                .card-body.p-3
                  .card-left.col-md-3.p-0
                    .rounded-circle.image-icon
                      = image_tag(star.avatar)
                  .card-right.col-md-9.p-0
                    .card-text.pl-2
                      %h4
                        =star.addiction.title
                      %p
                        =star.addiction.summary
