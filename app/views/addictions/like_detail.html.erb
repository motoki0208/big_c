<%= render 'shared/head_jumbotron' %><br><br>
<div id="like__detail-container">
  <div class="galleryHeader">
    <div class="galleryHeader__title">
      <%= current_user.name%> GALLERY
    </div>
  </div>
  <div class="c-tabNav">
    <ul class="c-tabNav__list">
      <li class="c-tabNav__item">
       お気に入り
      </li>
    </ul>
  </div>
  <h2><%= current_user.name %>さんのお気に入りの未来像</h2>
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% @addictions.each do |addiction| %>
         <% if addiction.likes_count == 1 %>
          <div class="addiction-card col-md-4 col-6 pr-1 pl-1 pb-4">
            <%= link_to(addiction_path(addiction.id), class: 'profile__card') do %>
              <div class="card-main-image card mb-4 box-shadow">
                <%= image_tag(addiction.image,class: "card-img-top") %>
                <div class="card-body p-3">
                  <div class="card-left col-lg-3 col-sm-12 p-0">
                    <div class="rounded-circle image-icon">
                      <%= image_tag(addiction.star.avatar,class: "") %>
                    </div>
                  </div>
                  <div class="card-right col-lg-9 col-sm-12 p-0">
                    <div class="card-text pl-2">
                      <h4><%= addiction.title %></h4>
                      <div class = "card__summary"><p><%= addiction.summary %></p></div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
           <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

